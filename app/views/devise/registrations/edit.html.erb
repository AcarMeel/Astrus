<div class="row">
  <div class="span4">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name,html:{class:"well"}), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <fieldset>
      <legend>Editar mi perfil</legend> 
       
      <div class="form-group">
        <div class="col-lg-10">
        <%= f.input :email, autofocus: true,input_html: { class: 'form-control' }  %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <div class="col-lg-10">
        <%= f.input :password, autocomplete: "off",input_html: { class: 'form-control' }  %>
        </div>
      </div>

      <div class="form-group">
       <div class="col-lg-10">
        <%= f.input :password_confirmation, autocomplete: "off",input_html: { class: 'form-control' }  %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-10">
        <%= f.input :current_password, autocomplete: "off",input_html: { class: 'form-control' }  %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
        <%= f.button :submit, "Editar" %>
        </div>
      </div>

        <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <h3>¿Abandonas <b class="Engagement-font"><i class="fa fa-star"></i>Astrus</b>?</h3>
           <%= button_to "Cancelar cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro(a)?" }, method: :delete, class: "btn btn-danger" %>    
          <%= link_to "Regresar", :back, class: "btn btn-info" %>
        </div>
      </div>
      
    </fieldset>
    <% end %>
    <br><br>
  </div>
</div>


