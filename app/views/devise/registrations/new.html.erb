<div class="row">
  <div class="span4">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),html:{class:"well"}) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
    <legend>Registrarse</legend>
      <div class="form-group">
        <div class="col-lg-10">
        <%= f.input :primer_nombre,placeholder: 'Tu nombre',input_html: { class: 'form-control' }  %>
      </div>
      </div>

        <div class="form-group">
          <div class="col-lg-10">
        <%= f.input :primer_apellido,placeholder: 'Apellidos',input_html: { class: 'form-control' } %>
      </div>
      </div>

        <div class="form-group">
          <div class="col-lg-10">
        <%= f.input :nombre_perfil,placeholder: 'usuario',input_html: { class: 'form-control' } %>
      </div>
      </div>

        <div class="form-group">
          <div class="col-lg-10">
        <%= f.input :email,placeholder: 'user@domain.com',input_html: { class: 'form-control' } %>
      </div>
      </div>

      <div class="form-group">
        <div class="col-lg-10">
        <%= f.input :password, autocomplete: "off",wrapper_html: { id: 'inputPassword' },input_html: { class: 'form-control' } %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      </div>

      <div class="form-group">
        <div class="col-lg-10">
        <%= f.input :password_confirmation,input_html: { class: 'form-control' } %>
      </div>
      </div>

      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
        <%= f.button :submit, "Registrarse" %>
        </div>
      </div>
  </fieldset>
<% end %>
  </div>
  <div class="span8">
    <h4>Crea una cuenta <b class="Engagement-font"><i class="fa fa-star"></i>Astrus</b> SocialNetwork</h4>
  </div>
</div>


