<div class="row">
  <div class="span4">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),html:{class:"well"}) do |f| %>

  <fieldset>
    <legend>Iniciar Sesión</legend>
      <%= f.input :email,placeholder: 'user@domain.com',input_html: { class: 'form-control' } %>
      <%= f.input :password,hint: 'No special characters.',input_html: { class: 'form-control' } %>
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <%= f.input :remember_me, as: :boolean %>
          </div>
    <% end -%>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
      <%= f.button :submit, "Iniciar Sesión" %>
    </div>
  </div>
  </fieldset>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
  <div class="span8">
    <h4>Bienvenido(a) <b class="Engagement-font"><i class="fa fa-star"></i>Astrus</b> SocialNetwork</h4>
  </div>
</div>


